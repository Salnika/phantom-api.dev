{
  "name": "phantom-api-backend",
  "version": "0.2.0-alpha",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^9.0.0",
    "commander": "^12.1.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "knip": "^5.61.3",
    "pg": "^8.12.0",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "redis": "^4.7.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@types/bcryptjs": "^3.0.0",
    "@types/better-sqlite3": "^7.6.4",
    "@types/commander": "^2.12.2",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.13",
    "@types/csurf": "^1.11.5",
    "@types/express": "^4.17.17",
    "@types/express-rate-limit": "^6.0.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^24.0.9",
    "@types/pg": "^8.11.10",
    "@types/redis": "^4.0.11",
    "@types/supertest": "^6.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "dotenv": "^17.0.1",
    "esbuild": "^0.25.5",
    "oxlint": "^1.0.0",
    "supertest": "^7.1.1",
    "tsx": "^4.7.0",
    "typedoc": "^0.28.10",
    "typedoc-plugin-markdown": "^4.7.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "projectConfig": {
    "type": "backend",
    "artifactName": "phantom-api-backend",
    "testCommand": "test:run"
  },
  "license": "MIT",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --target=node18 --format=esm --outfile=dist/index.js --packages=external --banner:js=\"import { createRequire } from 'module'; const require = createRequire(import.meta.url);\"",
    "dev": "tsx watch src/index.ts",
    "docs": "typedoc",
    "knip": "knip --config knip.json",
    "lint": "oxlint ./src",
    "migrate:postgres": "tsx src/scripts/migrate-to-postgres.ts",
    "migrate:postgres:help": "tsx src/scripts/migrate-to-postgres.ts --help",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch",
    "typecheck": "tsc --noEmit"
  },
  "type": "module"
}
